@model CoreMe.Models.AddProfileImage
@{
    ViewData["Title"] = "CustomerAdd";
    Layout = "~/Views/Shared/CustomerLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
            <br />
                @Html.HiddenFor(x=>x.CustomerID, new{@class="form-control"})
            <form class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputName1">Ad Soyad</label>
                        @Html.TextBoxFor(x=>x.CustomerName, new{@class="form-control"})

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail Adresi</label>
                        @Html.TextBoxFor(x=>x.CustomerMail, new{@class="form-control"})
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre</label>
                        @Html.PasswordFor(x=>x.CustomerPassword, new{@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Yazar Görseli</label>
                  <input type="file" name="CustomerImage" />
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Hakkında</label>
                        @Html.TextAreaFor(x=>x.CustomerAbout,10,3, new{@class="form-control"})
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                <button class="btn btn-light">İptal Et</button>
            </form>
        </div>
    </div>
</div>
</form>
