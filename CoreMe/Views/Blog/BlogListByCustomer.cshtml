@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByCustomer";
    Layout = "~/Views/Shared/CustomerLayout.cshtml";
}

<h1>BlogListByCustomer</h1>

<table class="table table-bordered">
    <tr>
        <th></th>
        <th>Yemek Başlığı</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durumu</th>
        <th>Sil</th>
        <th>Düzenle</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
     {
         <tr>
            <th>@item.BlogID</th>
            <td>@item.BlogTitle</td>
            <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.BlogStatus</td>
            <td><a href="/BLog/DeleteBlog/@item.BlogID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Blog/EditBlog/@item.BlogID" class="btn btn-warning">Düzenle</a></td>

         </tr>
     }
</table>
<a href="/Blog/BlogAdd" class="btn btn-primary align-content-center">Yeni Tarif Oluştur</a>